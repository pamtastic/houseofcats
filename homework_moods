

mood = input("Hi user, how do you feel today:")

if mood == "happy":
    print("It is great to see you happy!")

elif mood == "nervous":
    print("Take a deep breath 3 times")

elif mood == "sad":
    print("Sorry to hear that, please take some chocolate")

elif mood =="excited":
    print("Share some happy thoughts")

elif mood =="relaxed":
    print("You are soooo zen")
else:
    print("I don't recognize this mood")
